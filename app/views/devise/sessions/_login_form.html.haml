=bootstrap_form_for(resource, as:  resource_name, url:  user_session_path) do |f|
  =f.email_field :email, autofocus:  true, :label=>false, :placeholder=>t_attr(:user, :email)
  =f.password_field :password, :label=>false, :placeholder=>t_attr(:user, :password)
  - if devise_mapping.rememberable?
    .checkbox
      =f.check_box :remember_me
  =f.actions do
    = f.submit t_attr(:user, :sign_in)

%p
  =link_to "Créer un nouveau compte", new_registration_path(resource_name)
%p
  =link_to "Mot de passe oublié", new_user_password_path
